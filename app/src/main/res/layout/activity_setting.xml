<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/modify_psd_layout"
        style="@style/CommonLinearLayoutStyle">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="修改密码"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/w28" />

        <ImageView
            android:layout_width="@dimen/w14"
            android:layout_height="@dimen/w25"
            android:src="@mipmap/ic_arrow_gray" />
    </LinearLayout>

    <View
        style="@style/DividerHorizontalLine"
        android:layout_marginLeft="@dimen/w30"/>

    <LinearLayout
        android:id="@+id/clear_cache_layout"
        style="@style/CommonLinearLayoutStyle"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="清除缓存数据"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/w28" />
    </LinearLayout>
    <View
        style="@style/DividerHorizontalLine"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/bg_color"/>

    <Button
        android:id="@+id/login_out_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h100"
        android:background="@drawable/btn_common_react"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="@dimen/w32" />
</LinearLayout>