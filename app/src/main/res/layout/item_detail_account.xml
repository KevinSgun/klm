<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/w120"
    android:paddingLeft="@dimen/w30"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/detail_account_name_tv"
            style="@style/TextBlank.Medium"
            android:maxWidth="@dimen/w350"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="订单货款"
            />
        <TextView
            android:id="@+id/detail_account_date_tv"
            style="@style/TextBlank.Small"
            android:layout_marginTop="@dimen/w10"
            android:textColor="@color/textColorSecondary"
            android:maxWidth="@dimen/w400"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="2016-06-30"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/detail_account_money_tv"
        style="@style/TextBlank.Large"
        android:text="+100"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:paddingRight="@dimen/w30"
        android:textColor="@color/textColorPink" />
    <View style="@style/DividerHorizontalLine"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>