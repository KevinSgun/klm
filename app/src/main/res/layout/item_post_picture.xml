<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/w10"
    >

    <com.zitech.framework.widget.RemoteImageView
        android:id="@+id/item_image"
        android:layout_width="@dimen/w210"
        android:layout_height="@dimen/w210"
        android:layout_gravity="bottom|left"
        android:layout_marginTop="@dimen/w10"
        />

    <ImageView
        android:id="@+id/item_delete_icon"
        android:layout_width="@dimen/w60"
        android:layout_height="@dimen/w60"
        android:layout_gravity="right|top"
        android:scaleType="centerInside"
        android:visibility="gone"/>
</FrameLayout>