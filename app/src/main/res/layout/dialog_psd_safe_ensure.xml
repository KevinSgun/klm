<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/w660"
    android:layout_height="@dimen/w430"
    android:background="@drawable/bg_gray_rectangle_corner"
    android:orientation="vertical"
    android:padding="@dimen/w30">

    <TextView
        style="@style/TextBlank.Large"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/w20"
        android:text="为了保证您的账号安全" />

    <TextView
        style="@style/TextBlank.Large"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/w10"
        android:text="请输入登录密码" />

    <LinearLayout
        style="@style/CommonLinearLayoutStyle"
        android:layout_height="@dimen/w80"
        android:layout_marginTop="@dimen/w30"
        android:background="@drawable/bg_stroke_white_gray"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/input_psd_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="textPassword"
            android:background="@color/transparent" />

        <TextView
            android:id="@+id/find_psd_tv"
            style="@style/TextBlank.Small"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="找回密码" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/w30"
        android:orientation="horizontal">
        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="@dimen/w240"
            android:layout_height="@dimen/w70"
            android:textColor="@color/textColorPrimary"
            android:text="取消"
            android:background="@drawable/bg_common_react_unenable"/>
        <View style="@style/SpaceAutoFit"/>
        <Button
            android:id="@+id/confirm_btn"
            android:layout_width="@dimen/w240"
            android:layout_height="@dimen/w70"
            android:textColor="@color/white"
            android:text="确认"
            android:background="@drawable/bg_common_react_normal"/>
    </LinearLayout>
</LinearLayout>