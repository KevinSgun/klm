<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout style="@style/CommonLinearLayoutStyle">

            <TextView
                style="@style/TextBlank.Medium"
                android:text="项目名称" />

            <EditText
                android:id="@+id/consume_name_et"
                style="@style/CommonEditStyle"
                android:layout_marginLeft="@dimen/w54"
                android:hint="请输入项目名称"
                android:maxLength="16"
                android:singleLine="true"
                />
        </LinearLayout>

        <View
            style="@style/DividerHorizontalLine"
            android:layout_marginLeft="@dimen/w30" />

        <LinearLayout
            android:id="@+id/item_classify_layout"
            style="@style/CommonLinearLayoutStyle"
            android:background="@drawable/sl_common_item">

            <TextView
                style="@style/TextBlank.Medium"
                android:text="项目分类" />

            <TextView
                android:id="@+id/consume_classify_tv"
                style="@style/TextBlank.Medium"
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/w54"
                android:layout_weight="1"
                android:hint="请选择项目分类"
                android:maxLength="16"
                android:singleLine="true"
                />

            <ImageView
                android:layout_width="@dimen/w16"
                android:layout_height="@dimen/w28"
                android:layout_marginLeft="@dimen/w10"
                android:src="@mipmap/ic_arrow_gray" />
        </LinearLayout>

        <View
            style="@style/DividerHorizontalLine"
            android:layout_marginLeft="@dimen/w30" />

        <LinearLayout style="@style/CommonLinearLayoutStyle">

            <TextView
                style="@style/TextBlank.Medium"
                android:text="项目介绍" />

            <EditText
                android:id="@+id/consume_item_introduce_et"
                style="@style/CommonEditStyle"
                android:layout_marginLeft="@dimen/w54"
                android:hint="请填写项目介绍"
                android:maxLength="16"
                android:singleLine="true" />
        </LinearLayout>

        <View
            style="@style/DividerHorizontalLine"
            android:layout_marginLeft="@dimen/w30" />

        <LinearLayout style="@style/CommonLinearLayoutStyle">

            <TextView
                style="@style/TextBlank.Medium"
                android:text="服务价格" />

            <TextView
                style="@style/TextBlank.Medium"
                android:layout_marginLeft="@dimen/w54"
                android:text="￥" />

            <EditText
                android:id="@+id/consume_price_et"
                style="@style/CommonEditStyle"
                android:inputType="numberDecimal"
                android:layout_marginLeft="0dp"
                android:hint="请输入服务价格"
                android:maxLength="16"
                android:singleLine="true" />
        </LinearLayout>

        <View style="@style/DividerHorizontalLine" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/w55"
            android:background="@color/bg_color"
            android:paddingBottom="@dimen/w10"
            android:paddingLeft="@dimen/w30"
            android:paddingTop="@dimen/w10"
            android:text="职位适配(可多选)"
            android:textColor="@color/textColorPrimary" />

        <cn.kuailaimei.store.common.widget.ChooseItemView
            android:id="@+id/choose_item_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w15"
            android:layout_marginRight="@dimen/w30"
            android:layout_marginTop="@dimen/w30"
            android:layout_marginBottom="@dimen/w30"
            app:tcvTextSize="@dimen/w28"
            app:tcvCanTagClick="true"/>

        <View style="@style/DividerHorizontalLine" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/w20"
            android:background="@color/bg_color" />

        <LinearLayout
            android:id="@+id/if_is_package_layout"
            style="@style/CommonLinearLayoutStyle"
            android:background="@drawable/sl_common_item">

            <TextView
                style="@style/TextBlank.Medium"
                android:text="是否套餐" />

            <TextView
                android:id="@+id/if_is_package_tv"
                style="@style/TextBlank.Medium"
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/w54"
                android:layout_weight="1"
                android:maxLength="13"
                android:singleLine="true"
                android:text="是" />

            <ImageView
                android:layout_width="@dimen/w16"
                android:layout_height="@dimen/w28"
                android:layout_marginLeft="@dimen/w10"
                android:src="@mipmap/ic_arrow_gray" />
        </LinearLayout>

        <View style="@style/DividerHorizontalLine" />

        <LinearLayout
            android:id="@+id/commission_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/w55"
                android:background="@color/bg_color"
                android:paddingBottom="@dimen/w10"
                android:paddingLeft="@dimen/w30"
                android:paddingTop="@dimen/w10"
                android:text="佣金分配"
                android:textColor="@color/textColorPrimary" />

            <LinearLayout style="@style/CommonLinearLayoutStyle">

                <TextView
                    style="@style/TextBlank.Medium"
                    android:text="技师" />

                <TextView
                    style="@style/TextBlank.Medium"
                    android:layout_marginLeft="@dimen/w54"
                    android:text="￥" />

                <EditText
                    android:id="@+id/designer_commission_et"
                    style="@style/CommonEditStyle"
                    android:inputType="numberDecimal"
                    android:layout_marginLeft="0dp"
                    android:hint="请输入佣金金额"
                    android:maxLength="16"
                    android:singleLine="true" />
            </LinearLayout>

            <View style="@style/DividerHorizontalLine" />

            <LinearLayout style="@style/CommonLinearLayoutStyle">

                <TextView
                    style="@style/TextBlank.Medium"
                    android:text="助理" />

                <TextView
                    style="@style/TextBlank.Medium"
                    android:layout_marginLeft="@dimen/w54"
                    android:text="￥" />

                <EditText
                    android:id="@+id/assistant_commission_et"
                    style="@style/CommonEditStyle"
                    android:inputType="numberDecimal"
                    android:layout_marginLeft="0dp"
                    android:hint="请输入佣金金额"
                    android:maxLength="16"
                    android:singleLine="true" />
            </LinearLayout>
        </LinearLayout>

        <View style="@style/DividerHorizontalLine" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/bg_color" />

        <Button
            android:id="@+id/delete_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h100"
            android:background="@drawable/sl_white_item"
            android:text="删除"
            android:textColor="@color/textColorPink"
            android:textSize="@dimen/w28" />
    </LinearLayout>
</ScrollView>