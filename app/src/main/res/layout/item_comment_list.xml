<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/w30"
    android:paddingTop="@dimen/w30">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/comment_level_tv"
            style="@style/TextBlank.Medium"
            android:singleLine="true"
            android:text="很满意"
            android:textColor="@color/textColorPink" />

        <View style="@style/SpaceAutoFit" />

        <TextView
            android:id="@+id/user_phone_num_tv"
            style="@style/TextBlank.Small"
            android:textColor="@color/textColorSecondary" />

        <com.zitech.framework.widget.RemoteImageView
            android:id="@+id/user_avatar_iv"
            android:layout_width="@dimen/w40"
            android:layout_height="@dimen/w40"
            android:layout_marginLeft="@dimen/w20"
            android:layout_marginRight="@dimen/w30"
            android:src="@mipmap/ic_avatar_def_s" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_content_tv"
        style="@style/TextBlank.Medium"
        android:paddingBottom="@dimen/w20"
        android:paddingRight="@dimen/w30"
        android:paddingTop="@dimen/w20"
        />

    <TextView
        android:id="@+id/date_tv"
        style="@style/TextBlank.Small"
        android:paddingRight="@dimen/w30"
        android:textColor="@color/textColorSecondary"
        android:textSize="@dimen/w18" />
    <View style="@style/DividerHorizontalLine"
        android:layout_marginTop="@dimen/w30"/>
</LinearLayout>